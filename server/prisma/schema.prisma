generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id           String        @id @default(uuid())
    createdAt    DateTime      @default(now())
    email        String        @unique
    username     String        @unique
    password     String
    chats        ChatRoom[]
    chatsCreated ChatRoom[]    @relation("chatsCreated")
    messages     ChatMessage[]
    Issue        Issue[]
}

model ChatRoom {
    id              String        @id @default(uuid())
    createdAt       DateTime      @default(now())
    createdBy       User          @relation("chatsCreated", fields: [createdByUserId], references: [id])
    createdByUserId String
    title           String?
    messages        ChatMessage[]
    users           User[]
}

model ChatMessage {
    id          String   @id @default(uuid())
    timestamp   DateTime @default(now())
    text        String
    chat        ChatRoom @relation(fields: [chatId], references: [id])
    chatId      String
    user        User     @relation(fields: [userId], references: [id])
    userId      String
    messageType String   @default("chat message")
}

model Issue {
    id             String    @id @default(uuid())
    openedBy       User      @relation(fields: [openedByUserId], references: [id])
    openedByUserId String
    openedAt       DateTime  @default(now())
    closedAt       DateTime?
    title          String
    description    String
    type           IssueType
}

enum IssueType {
    feature_request
    bug_report
}
